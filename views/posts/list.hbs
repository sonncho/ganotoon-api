<html>
  <head>
    <title>게시판</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
    />
  </head>
  <body>
    <div class='container mt-5'>
      <h1>게시판</h1>
      <a href='/boards/create' class='btn btn-primary mb-3'>글쓰기</a>
      <table class='table'>
        <thead>
          <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>작성일</th>
            <th>관리</th>
          </tr>
        </thead>
        <tbody>
          {{#each posts}}
            <tr>
              <td>{{this.id}}</td>
              <td><a href='/boards/{{this.id}}'>{{this.title}}</a></td>
              <td>{{this.author}}</td>
              <td>{{this.createdAt}}</td>
              <td>
                <a
                  href='/boards/{{this.id}}/edit'
                  class='btn btn-sm btn-warning'
                >수정</a>
                <form
                  action='/boards/{{this.id}}/delete'
                  method='POST'
                  style='display:inline;'
                >
                  <button
                    type='submit'
                    class='btn btn-sm btn-danger'
                  >삭제</button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </body>
</html>